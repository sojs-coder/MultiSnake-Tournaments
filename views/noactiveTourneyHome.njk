<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <script src = "/scripts/helpers.js"></script>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles/noactiveTourney.css">
        <link rel="stylesheet" href="/styles/activeTourney.css">
        <link rel="stylesheet" href="/styles/universal.css">
        <title>MultiSnake Tournaments</title>
    </head>
    <body>
        <div class="no-active-tourney">
            <div class="navbar">
                <div class="left-link-group">
                    <div class="link">
                        <a href = "/" class="link2">Home</a>
                    </div>
                    <div class="link">
                        <div class="link2">Discord</div>
                    </div>
                </div>
                <div class="right-link-group">
                    <div class="link">
                        <div class="link2">All Games</div>
                    </div>
                    <div class="link">
                        <a href = "/leaderboard" class="link2">Leaderboard</a>
                    </div>
                    <div class="link">
                        <a href = "/signup" class="link2">Sign Up</a>
                    </div>
                    <div class="link">
                        <a href = "/login" class="link2">Log In</a>
                    </div>
                </div>
            </div>
            <div class="main">
                <h1 class="multi-snake-tournaments">MultiSnake Tournaments</h1>
                <script>
                    setInterval(count, 500);
                    function count() {
                        var countDownDate = {{ t.start_at }}
                        var now = new Date().getTime();
                        var timeleft = countDownDate - now;

                        var days = Math.floor(timeleft / (1000 * 60 * 60 * 24));
                        var hours = Math.floor((timeleft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                        var minutes = Math.floor((timeleft % (1000 * 60 * 60)) / (1000 * 60));
                        var seconds = Math.floor((timeleft % (1000 * 60)) / 1000);

                        var d = document.getElementById("d");
                        var h = document.getElementById("h");
                        var m = document.getElementById("m");
                        var s = document.getElementById("s");

                        d.innerHTML = days;
                        h.innerHTML = hours;
                        m.innerHTML = minutes;
                        s.innerHTML = seconds;
                    }
                </script>
                <div class="timer">
                    <span id = "d"></span>&nbsp;days,&nbsp;<span id = "h"></span>&nbsp;hours, &nbsp;<span id = "m"></span>&nbsp;minutes, &nbsp;<span id = "s"></span>&nbsp;seconds
                </div>
                <a class="join-the-tournament" href = "/tourney/{{ t.uid }}">Join the tournament</a>
                <div class="_156-players-780-prize">{{ t.players.length }} Players | ${{ t.prize }} Prize</div>
            </div>
        </div>
        <div id = "notif-box"></div>
    </body>
</html>